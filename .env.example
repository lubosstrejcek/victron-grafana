# Grafana Configuration
# Copy to .env and adjust values: cp .env.example .env

# Timezone
TZ=Europe/Prague

# Port
GRAFANA_PORT=3000

# Admin credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=victron123

# Anonymous access (set to false for production)
GRAFANA_ANON_ENABLED=true
GRAFANA_ANON_ROLE=Viewer

# InfluxDB connection
# Use host.docker.internal for standalone deployment (Mac/Windows)
# Use http://influxdb:8086 if running with the full stack
INFLUXDB_URL=http://host.docker.internal:8086
INFLUXDB_TOKEN=victron-lab-token
INFLUXDB_ORG=victron
INFLUXDB_BUCKET=energy
